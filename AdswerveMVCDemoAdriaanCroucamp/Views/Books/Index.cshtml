@model IEnumerable<AdswerveMVCDemoAdriaanCroucamp.Models.Book>

@{
    ViewBag.Title = "Book Collection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Book Collection</h2>
    <p class="text-center">
        <a href="@Url.Action("Create")"  style="margin-left: 5px" class="btn btn-primary">Add New Book</a>
    </p>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Quantity Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Author)</td>
                    <td>@string.Format("{0:C}", item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity_Available)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Book_Id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Book_Id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Book_Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
